{
  "run": [{
    "when": "{{!exists('app')}}",
    "method": "shell.run",
    "params": {
      "message": [ "git lfs install", "git clone https://huggingface.co/spaces/cocktailpeanut/AudioSep app" ]
    }
  }, {
    "method": "shell.run",
    "params": {
      "path": "app",
      "venv": "env",
      "message": [
        "uv pip install -r requirements.txt",
        "uv pip uninstall lightning -y",
        "uv pip install pytorch-lightning==2.0.0"
      ]
    }
  }, {
    "method": "script.start",
    "params": {
      "uri": "torch.js",
      "params": {
        "venv": "env",
        "path": "app"
      }
    }
  }, {
    "method": "notify",
    "params": { "html": "Click the 'start' tab to get started!" }
  }]
}
